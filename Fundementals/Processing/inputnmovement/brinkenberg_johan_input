boolean moveRight;
boolean moveLeft;
boolean moveUp;
boolean moveDown;
boolean gravityOn = false;

void keyPressed()
{
	if (key == 'a')
		moveLeft = true;
	else if (key == 'd')
		moveRight = true;

	if (key == 'w')
		moveUp = true;
	else if (key == 's')
		moveDown = true;

	if (key == 'g')
	{
		gravityOn = !gravityOn;
	}
}

void keyReleased()
{
	if (key == 'a')
		moveLeft = false;
	else if (key == 'd')
		moveRight = false;

	if (key == 'w')
		moveUp = false;
	else if (key == 's')
		moveDown = false;
}
